const { id } = Astro.params;
const { medlemskab } = Astro.props;
---

<section class="card-singleview">
  <article class="single-card">
    <h1 class="titel">{medlemskab.navn}</h1>

    <p class="bold">
      Op til {medlemskab.antal_brugere} brugere
    </p>

    <p class="pris">
      {medlemskab.pris} kr/år – ekskl. moms
    </p>

    <button>VÆLG PLAN</button>
  </article>
</section>

<style>
  .card-singleview {
    padding: 2rem 1.5rem;
    display: flex;
    justify-content: center;
  }

  .single-card {
    background: #c5bcaa;
    padding: 2rem;
    border-radius: 16px;
    width: 100%;
    max-width: 500px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .titel {
    font-size: 1.6rem;
  }

  .bold {
    font-weight: 600;
  }

  .pris {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }

  .single-card button {
    margin-top: 1.5rem;
    padding: 0.9rem 2.5rem;
    border-radius: 30px;
    border: none;
    background: #3b1314;
    color: white;
    font-size: 1rem;
    cursor: pointer;
  }
  @media (min-width: 800px) {
    .card-singleview {
      padding: 6rem 2rem;
    }

    .single-card {
      max-width: 500px;
      padding: 3rem;
    }

    .titel {
      font-size: 2.05rem;
    }
  }
</style>
