---
const { text, pris, antal } = Astro.props;
---

<section class="medlemskaber_grid">
  <article class="plan">
    <p>SoundWheel Work {text}</p>
    <p class="bold">Op til {antal} brugere</p>
    <p class="price">{pris} kr/år - ekskl. moms</p>

    <button>VÆLG PLAN</button>
  </article>

  <style>
    .plan button {
      justify-self: center;
      margin-top: auto;
      padding: 0.9rem 2.5rem;
      border-radius: 30px;
      border: none;
      background: #3b1314;
      color: white;
      font-size: 1rem;
      cursor: pointer;
    }
    .medlemskaber_grid {
      background-color: #e2ddd5;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      padding: 20px;
      gap: 20px;
    }
    .plan {
      display: grid;
      grid-template-rows: subgrid;
      grid-row: span 3;
      padding: 1rem;
      border-radius: 1.4rem;
      background-color: #c5bcaa;
    }
    .card:hover {
      filter: drop-shadow(1px 1px 2px rgb(90, 90, 90));
    }
    .plan .bold {
      font-weight: 700;
      font-size: 1.5rem;
      margin-bottom: 0.8rem;
    }
    .plan .price {
      font-weight: 600;
      margin-bottom: 2rem;
    }
  </style>
</section>

<script></script>
