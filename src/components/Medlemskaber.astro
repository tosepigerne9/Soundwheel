---
const { text, antal, pris } = Astro.props;
---

<article class="card">
  <p class="title">{text}</p>
  <p class="bold">Op til {antal} brugere</p>
  <p class="price">{pris} kr/år – ekskl. moms</p>
  <button>VÆLG PLAN</button>
</article>

<style>
  .card {
    background: #c5bcaa;
    padding: 2rem;
    border-radius: 16px;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    height: 100%;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
  }

  .title {
    font-weight: 600;
    font-size: 1.2rem;
  }

  .bold {
    font-weight: 600;
  }

  .price {
    margin-bottom: 1rem;
  }

  button {
    margin-top: auto;
    padding: 0.9rem 2.5rem;
    border-radius: 30px;
    border: none;
    background: #3b1314;
    color: white;
    font-size: 1rem;
    cursor: pointer;
  }
</style>
