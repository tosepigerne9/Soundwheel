---
const { img, h2, text, p1, p2, p3, p4 } = Astro.props;
---

<section class="info">
  <div>
    <h2>{h2}</h2>
    {text && <p>{text}</p>}
    {p1 && <p>{p1}</p>}
    {p2 && <p>{p2}</p>}
    {p3 && <p>{p3}</p>}
    {p4 && <p>{p4}</p>}
  </div>
  <div>
    <img src="/images/logo_stor.svg" alt="stort logo" />
  </div>
</section>

<style>
  .info {
    background-color: #e2ddd5;
    padding: 3rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    color: #3b1314;
  }

  .info img {
    max-width: 100%;
  }

  .info h2 {
    margin-top: 5rem;
    margin-bottom: 1rem;
    max-width: 60%;
  }
  .info p {
    max-width: 500px;
    margin-bottom: 1rem; /* Lille luft mellem afsnittene */
  }

  /* DESKTOP */
  @media (min-width: 800px) {
    .info {
      display: grid;
      grid-template-columns: 1fr 1fr;
      padding: 4rem 2rem;
      padding-left: 6rem;
    }

    .info h2 {
      max-width: 60%;
    }
  }
</style>
